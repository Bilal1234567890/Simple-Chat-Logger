<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Simple Chat Logger</title>
  <link rel="stylesheet" href="/index.css">
</head>
<body>
  <div class="chat-container">
    <div class="chat-header">
      <h1>Simple Chat Logger</h1>
      <form method="POST" action="/logout" style="display:inline;">
        <button id="logoutBtn" type="submit">Logout</button>
      </form>
      <span id="notification" style="margin-left:15px;color:#1976d2;font-weight:bold;font-size:1.2em;">
        ðŸ”” <%= chatLog.length %> messages
      </span>
    </div>
    <div id="chatLog">
      <% chatLog.forEach(function(msg) { %>
        <div class="message">
          <div>
            <strong><%= msg.username %></strong>
            <span class="timestamp">[<%= new Date(msg.timestamp).toLocaleString() %>]</span>
          </div>
          <div><%= msg.message %></div>
        </div>
      <% }) %>
    </div>
    <form id="messageForm" method="POST" action="/messages">
      <input type="text" id="messageInput" name="message" placeholder="Type your message..." required>
      <button type="submit">Send</button>
    </form>
  </div>
</body>
</html>